<Page x:Class="Shope.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shope.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="0 0 0 10">Администратору необходимо внести пароль</TextBlock>
            <PasswordBox Margin="0 0 0 30" x:Name="PassBx"></PasswordBox>
            <Button x:Name="EnterButt" Click="Button_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
